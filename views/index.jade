

extends layout

block content
  link(rel="stylesheet", href="/bower_components/skeleton/stylesheets/skeleton.css")
  link(rel="stylesheet", href="/bower_components/skeleton/stylesheets/layout.css")
  link(rel="stylesheet", href="stylesheets/index.css")

  :stylus

    .parts
      display none
      .destroyed
        background-color red

    .players, .mechs
      li
        list-style none
        position relative
        display inline-block
        margin-right 20px
        font-size 18px
        color white
        background-color black
        padding 10px 30px
        cursor pointer
        .remove
          position absolute
          top 0
          right 0
          cursor pointer
      .active
        color red
      ul
        display inline-block
      .new
        display inline-block
        button
          margin 0
        input
          width 150px


  .container
      
    .players
      ul
      .new
        input(name='name')
        button New Player
    
    .mechs
      ul
      .new
        select(name='type')

        input(name='name')
        button New Mech
    
    .clearfix.parts

    .clearfix
      .sides.chamfered.four.columns
        .two.columns
          h1 pick side
        .one.columns
          .side LEFT
          .side.active CENTER
          .side RIGHT
          .side REAR
        button.fire FIRE

      .weapons.twelve.columns
        .columns.energy(style='width:20%')
          h4 Energy
        .columns.ballistic(style='width:20%')
          h4 Ballistic
        .columns.missile(style='width:20%')
          h4 Missile
        .columns.close(style='width:20%')
          h4 Close Combat
  
  footer
