  script(src="/bower_components/routie/lib/routie.js")
  script(src="/bower_components/underscore/underscore.js")
  script(src="/javascripts/data.js")
  script(src="/templates.js")
  script(src="/javascripts/game.js")
  script(src="/javascripts/mechs.js")